// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  COMERCIAL
  INSTRUTOR
  FINANCEIRO
  MECANICO
  USER
}

enum LeadStatus {
  NOVO_LEAD
  CONTATO_INICIADO
  QUALIFICADO
  PROPOSTA_ENVIADA
  NEGOCIACAO
  GANHO
  PERDIDO
}

enum OSStatus {
  AGUARDANDO
  EM_EXECUCAO
  AGUARDANDO_PECA
  FINALIZADO
  ENTREGUE
}

enum TransactionType {
  RECEITA
  DESPESA
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String?
  phone         String?
  passwordHash  String
  role          Role         @default(USER)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relationships
  managedLeads Lead[]       @relation("ManagerLeads")
  enrollments  Enrollment[]
  assignedOS   ServiceOrder[] @relation("MechanicOS")
  instructed   Course[]     @relation("InstructorCourses")
  financialTransactions FinancialTransaction[]
  logs         ActivityLog[]

  @@map("users")
}

model Lead {
  id              String      @id @default(cuid())
  name            String
  phone           String?
  whatsapp        String?
  email           String?
  origin          String?     // site, paid_traffic, whatsapp, manual
  interest        String?     // curso, servico, peca
  status          LeadStatus  @default(NOVO_LEAD)
  notes           String?     @db.Text
  tags            String[]
  managerId       String?
  manager         User?       @relation("ManagerLeads", fields: [managerId], references: [id])
  
  courseDateId    String?
  courseDate      CourseDate? @relation(fields: [courseDateId], references: [id])
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  interactions    Interaction[]
  transactions    FinancialTransaction[]

  @@map("leads")
}

model Interaction {
  id        String   @id @default(cuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  type      String   // call, message, email, meeting
  content   String   @db.Text
  createdAt DateTime @default(now())

  @@map("interactions")
}

model Course {
  id                String       @id @default(cuid())
  name              String
  description       String?      @db.Text
  instructorId      String?
  instructor        User?        @relation("InstructorCourses", fields: [instructorId], references: [id])
  syllabus          String?      @db.Text
  content           String?      @db.Text    // New: Rich text for course schedule
  schedule          Json?        // New: Structured schedule (Day 1, Day 2...)
  learningOutcomes  String[]     // New: "What you will learn" bullet points
  image             String?
  slug              String       @unique
  type              String       @default("CURSO") // New: CURSO, EVENTO, TRACK_DAY
  status            String       @default("PUBLICADO") // New: PUBLICADO, RASCUNHO, OCULTO
  certificateLayout String?      // New
  badgeLayout       String?      // New
  active            Boolean      @default(true)
  
  dates             CourseDate[]
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@map("courses")
}

model CourseDate {
  id                String       @id @default(cuid())
  courseId          String
  course            Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  slug              String       @unique // For the dynamic LP: /inscricao/slug-da-data
  startDate         DateTime
  endDate           DateTime?
  timeStart         String?
  timeEnd           String?
  
  // New: Detailed Address
  cep               String?
  address           String?
  number            String?
  neighborhood      String?
  city              String?
  state             String?
  location          String       // Header location (e.g. "São Paulo - SP")
  latitude          Float?
  longitude         Float?
  mapUrl            String?
  
  instructorName    String?      // New: If different from course instructor
  instructorImage   String?      // New
  instructorBio     String?      @db.Text // New
  coverImage        String?      // New
  videoUrl          String?      // New
  modality          String       @default("Presencial") // New
  billingType       String       @default("NACIONAL") // New
  schedule          Json?        // Schedule for this course date (array of {day, title, topics[]})
  
  price             Decimal      @db.Decimal(10, 2)
  priceRecycling    Decimal?     @db.Decimal(10, 2) // New
  
  maxStudents       Int
  enrolledCount     Int          @default(0)
  active            Boolean      @default(true)
  
  enrollments       Enrollment[]
  leads             Lead[]
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@map("course_dates")
}

model Enrollment {
  id               String      @id @default(cuid())
  studentId        String
  student          User        @relation(fields: [studentId], references: [id])
  courseDateId     String
  courseDate       CourseDate  @relation(fields: [courseDateId], references: [id])
  paymentStatus    String      @default("PENDENTE") // PENDENTE, PAGO, CANCELADO
  paymentMethod    String?     // PIX, CARTAO, BOLETO, DINHEIRO
  amountPaid       Decimal     @default(0) @db.Decimal(10, 2)
  totalAmount      Decimal     @default(0) @db.Decimal(10, 2)
  attendance       Boolean     @default(false)
  certificateIssued Boolean    @default(false)
  paymentLink      String?     // Link generated by admin
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@unique([studentId, courseDateId])
  @@map("enrollments")
}

model ServiceOrder {
  id            String   @id @default(cuid())
  clientName    String
  clientPhone   String?
  bikeModel     String
  bikePlate     String?
  bikeKM        Int?
  serviceRequest String  @db.Text
  technicalCheck String? @db.Text
  status        OSStatus @default(AGUARDANDO)
  mechanicId    String?
  mechanic      User?    @relation("MechanicOS", fields: [mechanicId], references: [id])
  value         Decimal? @db.Decimal(10, 2)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("service_orders")
}

model FinancialTransaction {
  id          String          @id @default(cuid())
  description String
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType
  category    String          // curso, servico, peca, operacional
  leadId      String?
  lead        Lead?           @relation(fields: [leadId], references: [id])
  userId      String?
  user        User?           @relation(fields: [userId], references: [id])
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())

  @@map("financial_transactions")
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  details   String?  @db.Text
  entityType String?
  entityId   String?
  target    String?
  createdAt DateTime @default(now())

  @@map("activity_logs")
}

model Settings {
  id           String @id @default("singleton")
  
  // Geral
  companyName  String @default("Pro Riders")
  logo         String?
  icon         String?
  brandColor   String @default("#710409")
  
  // Contato
  address      String?
  phone        String?
  email        String?
  whatsapp     String?
  
  // Pagamento
  stripePublicKey String?
  stripeSecretKey String?
  asaasApiKey     String?
  
  // Integrações AI
  aiProvider      String? @default("openai") // openai, gemini
  aiApiKey        String?
  
  // Marketing & SEO
  metaPixelId       String?
  googleAnalyticsId String?
  googleTagManagerId String?
  seoTitle          String?
  seoDescription    String?
  seoKeywords       String?
  
  updatedAt         DateTime @updatedAt @default(now())

  @@map("settings")
}
